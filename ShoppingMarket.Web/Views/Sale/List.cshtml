
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<ShoppingMarket.DTO.Entities.SalesDTO>


<link href="~/lobibox-master/dist/css/lobibox.min.css" rel="stylesheet" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="~/css/Basket.css" rel="stylesheet" />
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>
<script src="~/lobibox-master/dist/js/lobibox.min.js"></script>
<script src="~/js/Basket.js"></script>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default panel-table">

                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list" id="basketTable">
                        <thead>
                            <tr>
                                <th class="hidden-xs">ID</th>
                                <th>Adı</th>
                                <th>Adet</th>
                                <th>Fiyat</th>
                                <th>Ödeme Tipi</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="hidden-xs">@item.Id</td>
                                        <td>@item.UserName</td>
                                        <td>@item.TotalQuantity</td>
                                        <td>@item.TotalPrice TL</td>
                                        <td>@item.PaymentType</td>
                                        <td>@String.Format("{0:dd MM yyyy}", item.UpdateDate)</td>                                    
                                    </tr>
                               
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


